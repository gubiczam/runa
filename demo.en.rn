fn main() {
  let x = add(2, 3) * 4;
  print("x =", x);

  let y = sum_to(5);
  print("sum_to(5) =", y);

  let z = array_demo();
  let f = for_demo();

  if (z == 99) {
    if (f == 6) { print("ok"); } else { print("fail"); }
  } else {
    print("z bad");
  }

  return x + y + z + f;
}
